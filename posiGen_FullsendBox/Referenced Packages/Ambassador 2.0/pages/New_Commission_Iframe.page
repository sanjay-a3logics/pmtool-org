            $alert.clearAll('form', 'add-commission-alert');
            $scope.ambassadorSelected = true;
            $scope.commission.email = newValue.email;
        }
        else if(typeof newValue !== 'undefined' && newValue) {
             $scope.ambassadorSelected = true;
             $scope.commission.email = newValue;
        } else {
            $scope.ambassadorSelected = false;
            delete $scope.commission.internal_id;
